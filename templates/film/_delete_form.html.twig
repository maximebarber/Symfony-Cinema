<form method="post" action="{{ path('film_delete', {'idFilm': film.idFilm}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ film.idFilm) }}">
    <button class="btn">Delete</button>
</form>
